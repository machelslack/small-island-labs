{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "esModuleInterop": true,
    "module": "esnext"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts", "stories", "**/*.test.ts"]
}
